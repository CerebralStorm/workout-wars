%header  
  %nav.navbar.navbar-default{:role => "navigation"}
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Fortis", root_path, class: 'navbar-brand'
    .collapse.navbar-collapse.navbar-ex1-collapse
      %ul.nav.navbar-nav
        %li.active
          = link_to "Leaderboard", users_path
        %li
          = link_to "Feedback", root_path
        %li
          = link_to "Log a Workout", new_user_workout_path(current_user)
        %li
          = link_to "View Workouts", user_workouts_path(current_user)
        %li
          %a{:href => "#"} Create Competition
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            My Account
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to "Profile", users_path
            %li
              = link_to "Settings", edit_user_path(current_user)
      %form.navbar-form.navbar-left{:role => "search"}
        .form-group
          %input.form-control{:placeholder => "Search", :type => "text"}/
        %button.btn.btn-default{:type => "submit"} Submit
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            Session
            %b.caret
          %ul.dropdown-menu
            -if user_signed_in?
              %li
                = link_to "Sign Out", destroy_user_session_path, method: :delete, rel: "logout-link"
            -else
              %li
                = link_to "Sign In", new_user_session_path, rel: "login-link"