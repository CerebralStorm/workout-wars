%fieldset
  = form_for Exercise.new do |f|
    %ul
      %li
        .control-group
          = f.label :exercise_type_id, class: "control-label"
          .controls
            = f.collection_select(:exercise_type_id, ExerciseType.all, :id, :name, {}, {:class => 'exercise-select'})
      %li.use_reps
        .control-group
          = f.label :reps, class: "control-label"
          .controls
            = f.text_field :reps
      %li.use_duration        
        .control-group
          = f.label :duration, class: "control-label"
          .controls
            = f.text_field :duration
      %li.use_distance        
        .control-group
          = f.label :distance, class: "control-label"
          .controls
            = f.text_field :distance
      %li.use_weight        
        .control-group
          = f.label :weight, class: "control-label"
          .controls
            = f.text_field :weight
      %li.use_calories        
        .control-group
          = f.label :calories, class: "control-label"
          .controls
            = f.text_field :calories
      %li
        .control-group
          .controls
            = f.submit :submit