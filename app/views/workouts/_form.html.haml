.workout-form  
  = form_for [user, workout] do |f|
    - if workout.errors.any?
      #error_explanation
        %h2= "#{pluralize(workout.errors.count, "error")} prohibited this workout from being saved:"
        %ul
          - workout.errors.full_messages.each do |msg|
            %li= msg

      = link_to_add_fields "Add exercise", f, :exercise

      = f.fields_for :exercises do |builder|
        = render partial: 'workouts/exercise_fields', locals: { f: builder }

    .actions
      = f.submit 'Save', class: "btn btn-success", rel: 'save-workout-link'
