= form_for [@user, @workout] do |f|
  - if @workout.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workout.errors.count, "error")} prohibited this workout from being saved:"
      %ul
        - @workout.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :date, class: "control-label"
    .controls
      = f.date_select :date

    = link_to_add_fields "Add activity", f, :activities

    = f.fields_for :activities do |builder|
      = render partial: 'workouts/activity_fields', locals: { f: builder }

  .actions
    = f.submit 'Save'
