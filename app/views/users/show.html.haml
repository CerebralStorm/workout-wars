%h1 
  Profile for 
  = @user.email
  = link_to "Edit Profile", edit_user_path(@user)
%p
  Nickname
  = @user.nickname
%p 
  Name
  = @user.name
%p{id: "user_level"} 
  Level:     
  = @user.level
%p{id: "user_xp"} 
  Total Experience:     
  = @user.xp
%p{id: "user_levelup"} 
  Experience Needed for Level up:     
  = @user.xp_for_levelup
%h2 Exercises by Date
= link_to "<", date: @date.prev_day
= @date.strftime("%B %d %Y")
= link_to ">", date: @date.next_day
%ul{id: "user_exercises"}
  - @user.exercises_by_date(@date).each do |exercise|
    = render exercise

%h3 
  My Teams
%ul
  - @user.teams.each do |team|
    %li
      = link_to team.name, team_path(team)

%a.btn.btn-primary.btn-lg{"data-toggle" => "modal", href: "#exerciseModal"} Add Exercise
= render partial: "exercises/form"

%h3 
  Competitions I've Won
%p
  - @won_competitions.each do |comp|
    = link_to comp.name, competition_path(comp)

%h2 Current Individual Competitions
%div.col-md-8
  - @user.active_individual_competitions.each do |comp|
    = render comp
%br
%h2 Current Team Competitions
%div.col-md-8
  - @user.active_team_competitions.each do |team_comp|
    = render team_comp
