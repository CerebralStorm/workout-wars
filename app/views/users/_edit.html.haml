%h2
  Editing #{@user.nickname}

= form_for @user do |f|
  .control-group
    = f.label "What your Mom calls you", class: "control-label"
    .controls
    = f.text_field :name, placeholder: "Name"

  .control-group
    = f.label "What your friends would call you, if they were smart", class: "control-label"
    .controls
    = f.text_field :nickname, placeholder: "Nickname"

  .control-group
    .controls
      = f.radio_button :gender, "Male", :checked => true 
      = label :gender, "Male"
      = f.radio_button :gender, "Female"
      = label :gender, "Female"
      = f.radio_button :gender, "Other"
      = label :gender, "Other"      

  .control-group
    = f.label "Your body's relative mass", class: "control-label"
    .controls
      = f.number_field :weight, placeholder: "Weight"
      %br
      %i (This will not be publicly shared, unless you want to!)

  .control-group
    = f.label "Age", class: "control-label"
    .controls
      = f.number_field :age, placeholder: "Age"

  .control-group
    = f.label :height, class: "control-label"
    .controls
      = f.number_field :height, placeholder: "Height"

  .actions
    = f.submit "Update", class: "btn btn-primary"
%p
  = link_to "Click here to change your email, password", edit_user_registration_path
%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}
= link_to "Back", :back